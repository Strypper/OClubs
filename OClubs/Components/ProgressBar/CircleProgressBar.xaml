<Page
    x:Class="OClubs.Components.ProgressBar.CircleProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OClubs.Components.ProgressBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Width="200" Height="200">
        <controls:RadialProgressBar
          x:Name="RadialProgressBarControl"
          Foreground="Firebrick" Thickness="4"
          Minimum="0" Maximum="100"
          Width="200" Height="200"
          Outline="LightGray" Value="80"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"/>
        <TextBlock Text="80" FontSize="80"
                   Foreground="Firebrick"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>
</Page>
